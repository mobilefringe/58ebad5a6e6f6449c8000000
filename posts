<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var blogs = getBlogList().sortBy(function(o){ return o.name });
            // var blog_beauty = getBlogDataBySlug('stc-women-s-fashion');
            // var blog_lifestyle = getBlogDataBySlug('stc-happenings');
            // var blog_mens = getBlogDataBySlug('stc-food');
            // blog_beauty.posts = blog_beauty.posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
            // blog_lifestyle.posts = blog_lifestyle.posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
            // blog_mens.posts = blog_mens.posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
            // var top_blogs = [];
            // top_blogs.push(blog_beauty);
            // top_blogs.push(blog_lifestyle);
            // top_blogs.push(blog_mens);
            var posts = getAllPublishedPosts();
            var published_posts = posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
            renderPosts2("#trending_container", "#trending_template", published_posts.slice(0,3));
            renderPosts("#blog_container", "#blog_template", published_posts);
            renderPosts2("#side_links_container", "#side_links_template", published_posts.slice(0,3));
            renderBlogs("#blog_links_container", "#blog_links_template", blogs);
            // init_home_hours();
            show_content();
            load_more(1);
            
            $('#load_more_posts').click(function(e){
                var i = $('#num_loaded').val();
                load_more(i);
                e.preventDefault();
            });
            get_instagram("//stc.mallmaverick.com/api/v2/stc/social.json", 10, 'thumbnail', render_instagram)
            // http://fdl.mallmaverick.com/api/v2/fdl/social.json
        }

        loadMallDataCached(renderAll); 
    })
</script>