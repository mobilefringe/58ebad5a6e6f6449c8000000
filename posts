<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var blogs = getBlogList().sortBy(function(o){ return o.name });
            var posts = getBlogDataBySlug('fdl-shop-the-look');//getAllPublishedPosts();
            if(posts !== null && posts !== undefined) {
                var published_posts = posts.posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
                renderPosts2("#trending_container", "#trending_template", published_posts.slice(0,3));
                renderPosts("#blog_container", "#blog_template", published_posts);
                renderPosts2("#side_links_container", "#side_links_template", published_posts.slice(0,3));
                var categories = getTagCategoris(published_posts);
                renderTags("#blog_links_container", "#blog_links_template", categories);
            }
            // init_home_hours();
            show_content();
            load_more(1);
            
            $('#load_more_posts').click(function(e){
                var i = $('#num_loaded').val();
                load_more(i);
                e.preventDefault();
            });
            get_instagram("https://fdl.mallmaverick.com/api/v4/fdl/social.json", 10, 'thumbnail', render_instagram);
        }

        loadMallDataCached(renderAll); 
    })
</script>