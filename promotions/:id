<script>
$(document).ready(function(){
    init();
    function renderAll(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        var promo_details = getPromotionDetailsBySlug(slug);
        if(promo_details.promotionable_type == "Property"){
            $('#promo_title').html("PROMOTION DU CENTRE");
        } else {
            $('#promo_title').html("PROMOTION DE MAGASIN")
        }
        renderPromoDetails('#promo_details_container', '#promo_details_template', promo_details);
        
        setTimeout(function() {
            show_content();
        }, 500);
    }
    loadMallDataCached(renderAll); 
})
</script>