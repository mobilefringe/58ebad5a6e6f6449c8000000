<script>
    $(document).ready(function(e) {
        init(e);
        function renderAll (){
            var blogs = getBlogList().sortBy(function(o){ return o.name });
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1].replace(/%20/g," ");
            // _.replace(pathArray[pathArray.length-1],"%20"," ");
            console.log(slug);
            var posts = getBlogDataBySlug('fdl-shop-the-look');//getBlogDataBySlug(slug).posts;
            if(posts !== null && posts !== undefined) {
                var published_posts = posts.posts.sortBy(function(o){ return o.publish_date }).reverse();
                var side_posts = getAllPublishedPosts().sortBy(function(o){ return o.publish_date }).reverse();
                var posts_length = renderPostsByTag("#blog_container", "#blog_template", published_posts, slug);
                renderPosts2("#side_links_container", "#side_links_template", side_posts.slice(0,3));
                var categories = getTagCategoris(published_posts);
                renderTags("#blog_links_container", "#blog_links_template", categories);
                console.log(posts_length);
                load_more_2(1, posts_length);
                
                $('#load_more_posts').click(function(e){
                    var i = $('#num_loaded').val();
                    load_more_2(i, posts_length);
                    e.preventDefault();
                });
            }
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>